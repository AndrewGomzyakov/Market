@model IEnumerable<Market.Context.DbCategory>

@{
    Layout = "_Layout";
}

<link rel="stylesheet" type="text/css" href="~/css/small_things.css">
<link rel="stylesheet" type="text/css" href="~/css/GetReg_category.css">

@foreach (var item in Model)
{
<div class="oneThird">
    <img style="width: 80px; height: 80px; background: white;" src="data:image/jpeg;base64,@(Convert.ToBase64String(item.Image))" />
    <p><a href="/Product/GetRegistry/@item.Id">@item.Name</a></p>

</div>
}

        @if (@Context.User.Claims.FirstOrDefault() != null &&
            @Context.User.Claims.First(c => c.Type == "UserRole").Value == "Admin")
        {
            <p><a href="/Category/Save" class="floating-button_small">Добавить новую категорию</a></p>
        }
