@model PhoneConfirmModel

@{
    Layout = null;
    ViewBag.Title = "ConfirmPhone";  
}  
  
@using (Html.BeginForm("ConfirmPhone", "Login", FormMethod.Post))  
{  
        @Html.AntiForgeryToken()  
        @Html.ValidationSummary(true)
        @if (@ViewBag.Message != null)  
        {  
            <div class="alert alert-danger" id="ajaxAlert">
                @ViewBag.ErrorMessage
            </div> 
        }

    <div style="position: absolute; top: 35%; left: 45%; margin-top: -50px; margin-left: -50px; width: 320px; height: 80px;">
    <div style="text-align: center; color: #1b1e21;">Подтвердите номер телефона</div>
        <fieldset>
            <table style="border: 1px black">
                <tr>
                    @if (!String.IsNullOrEmpty(@Model?.ErrorMessage))
                    {
                        <div style="text-align: center; color: red;">@Model.ErrorMessage</div>
                    }
                </tr>
                <tr>
                    <td>@Html.LabelFor(a => a.Login)</td>
                    <td>@Html.TextBoxFor(a => a.Login)</td>
                    <td>@Html.ValidationMessageFor(a => a.Login)</td>
                </tr>
                <tr>
                    <td>
                        @Html.LabelFor(a => a.Code)
                    </td>
                    <td>
                        @Html.PasswordFor(a => a.Code)
                    </td>
                    <td>@Html.ValidationMessageFor(a => a.Code)</td>
                </tr>
                <tr>
                    <td></td>
                    <td>
                        <input type="submit" value="Отправить код."/>
                    </td>
                    <td></td>
                </tr>
            </table>
        </fieldset>
    </div>
}